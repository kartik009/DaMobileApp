<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FleetTrackDemo1.FleetList">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="FleetListView"  ItemsSource="{Binding Vehical}" ItemSelected="FleetListView_ItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding RcNo}">
                        </TextCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Label Text="Empty List" x:Name="EmptyMessage" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" HorizontalTextAlignment="Center" IsVisible="False"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>